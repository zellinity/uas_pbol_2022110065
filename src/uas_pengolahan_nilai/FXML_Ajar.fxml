<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="uas_pengolahan_nilai.FXML_AjarController">
    <children>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Form Ajar" style="-fx-font-size: 18px;" />
            <HBox spacing="10">
                <Label text="Kode MataKuliah:" />
                <ComboBox fx:id="cbKodeMK" />
            </HBox>
            <HBox spacing="10">
                <Label text="Kode Dosen:" />
                <ComboBox fx:id="cbKodeDosen" />
            </HBox>
            <HBox spacing="10">
                <Button text="Simpan" onAction="Btnsimpan" />
                <Button text="Hapus" onAction="Btnhapus" />
            </HBox>
            <TableView fx:id="tableAjar">
                <columns>
                    <TableColumn text="Kode MataKuliah" fx:id="colKodeMK" />
                    <TableColumn text="Kode Dosen" fx:id="colKodeDosen" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
